<aura:component implements="force:hasRecordId,flexipage:availableForAllPageTypes,force:lightningQuickActionWithoutHeader"
	access="global"
	controller="CreateInvoiceFromOrder">
	
	<!-- attributes -->
    <aura:attribute name="stringToShow" type="String"/>

    <!-- handlers -->
    <aura:handler name="init" value="{!this}" action="{!c.init}"/>

	 <!-- Body -->
	<div class="slds-text-heading_large slds-text-align_center" style="height:5rem">{!v.stringToShow}</div>
	
	
 <!-- Footer -->
    <div class="slds-modal__footer">
            <lightning:button class="slds-button slds-button_destructive" label="OK" onclick="{!c.handleClickButton}" />
    </div>
</aura:component>